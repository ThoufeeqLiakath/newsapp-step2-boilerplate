@model News_WebApp.Models.News

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>


<hr />
<div class="row">
    <div class="col-md-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewsId" class="control-label"></label>
            <span class="form-control">@Model.NewsId</span>


        </div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <span class="form-control">@Model.Title</span>

        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <span class="form-control">@Model.Content</span>

        </div>
        <div class="form-group">
            <label asp-for="PublishedAt" class="control-label"></label>
            <span class="form-control">@Model.PublishedAt</span>

        </div>
        <div class="form-group">
            <label asp-for="UrlToImage" class="control-label"></label>
            <img src=@Model.UrlToImage alt="image not found" />
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
